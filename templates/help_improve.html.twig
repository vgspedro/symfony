<!DOCTYPE html>

{% set foo = app.request.locale |split('_') %}

<html lang="{{ foo[0] }}" xml:lang="{{ foo[0] }}" xmlns="http://www.w3.org/1999/xhtml">

    <head>
 		<meta charset="UTF-8">
        <title>{{ company.metaDescription }}</title>
 		<meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
		<meta name="keywords" content="{{ company.metaKeywords }}">
 		<meta name="title" content="{{ company.metaDescription }}">
 		<meta name="description" content="{{ company.metaDescription }}">
		<meta name="robots" content="index,nofollow">
 		
 		<!-- Google / Search Engine Tags -->
        <meta itemprop="name" content="{{ company.metaDescription }}">
        <meta itemprop="description" content="{{ company.metaDescription }}">
        <meta itemprop="image" content="{{ asset('upload/gallery/') }}{{company.logo}}">
        
        <!-- Facebook Meta Tags -->
        <meta property="og:url" content="{{ company.linkMyDomain }}">
        <meta property="og:type" content="website">
        <meta property="og:title" content="{{ company.metaDescription }}">
        <meta property="og:description" content="{{ company.metaDescription }}">
        <meta property="og:image" content="{{ asset('upload/gallery/') }}{{company.logo}}">
        
        <!-- Twitter Meta Tags -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{{ company.metaDescription }}">
        <meta name="twitter:description" content="{{ company.metaDescription }}">
        <meta name="twitter:image" content="{{ asset('upload/gallery/') }}{{company.logo}}">
        {% include 'taruga/styles.html' %}
        		<!-- Global site tag (gtag.js) - Google Analytics -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=UA-138976385-1"></script>
        <script>
 	 		window.dataLayer = window.dataLayer || [];
  			function gtag(){dataLayer.push(arguments);}
  			gtag('js', new Date());
			 gtag('config', 'UA-138976385-1');
		</script>
    </head>
    <body>

		{% include 'taruga/navbar.base.html' %}
        
        <section class="bgimg-6 w3-border-bottom" style="background-image: url({{asset('images/help-improve.jpg')}}); padding-top:56px;height:30em;background-position: 0% 76%;background-attachment: unset">
            <div class="w3-padding-64 w3-padding-large w3-text-white">
                <h2 class="w3-padding-16">{% trans %}link.help_improve{% endtrans %}</h2>
                <p style="max-width:430px">{% trans %}help_improve_txt{% endtrans %}</p>
            </div>
        </section>

        <section class="request w3-padding-32" style="max-width:1024px;margin:0 auto">
            <div class="w3-row-padding">
            <div class=" w3-col l6 s12 w3-padding-32">
                <div class="w3-col" style="width:74px">
                    <i class="fa fa-smile-o w3-jumbo" style="margin-top:10px"></i>
                </div>
                <div class="w3-rest">
                    <h2 class="">{% trans %}send_feedback{% endtrans %}</h2>
                    <p class="w3-margin-bottom w3-hide-small" style="max-width:236px">{% trans %}send_feedback_txt{% endtrans %}</p>
                    <p class="w3-margin-bottom w3-hide-medium w3-hide-large">{% trans %}send_feedback_txt{% endtrans %}</p>
                    <span onclick="alert('feedback')" class="w3-margin-top w3-btn w3-border w3-round w3-white">{% trans %}send_feedback_btn{% endtrans %}</span>
                </div>
            </div>
            
            <div class="w3-col l6 s12 w3-padding-32">
                
                <div class="w3-col" style="width:74px">
                    <i class="w3-jumbo fa fa-calendar-plus-o" style="margin-top:14px"></i>
                </div>
                <div class="w3-rest">
                    <h2 class="">{% trans %}request_feature{% endtrans %}</h2>
                    <p class="w3-margin-bottom w3-hide-small" style="max-width:236px">{% trans %}request_feature_txt{% endtrans %}</p>
                    <p class="w3-margin-bottom w3-hide-medium w3-hide-large">{% trans %}request_feature_txt{% endtrans %}</p>
                    <span onclick="alert('feature')" class="w3-btn w3-border w3-round w3-white">{% trans %}request_feature_btn{% endtrans %}</span>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="w3-row">
            <div class="w3-col l6 s12 w3-padding-32 w3-center">
                <h3 class="">{% trans %}enhance_experience{% endtrans %}</h3>
                <a href="{{ path('index') }}"  class="w3-btn w3-border w3-khaki w3-round">{% trans %}enhance_experience_btn{% endtrans %}</a>
            </div>
            <div class="w3-col l6 s12 w3-hide-small">
                <img src="https://www.adaware.com/sites/default/files/2016-09/hubcta-helpus_1.jpg">
            </div>
        </div>
    </section>

    <section class="request w3-padding-16" style="max-width:1024px;margin:0 auto"><div class="w3-border-bottom"></div></section>

    <section>
        <div class="w3-row">
    <div class="w3-xxxlarge w3-padding-small w3-center w3-opacity-min">
  {% if company.linkFacebookActive == true %}
  <a href="{{company.linkFacebook}}" target="_blank" style="display:inline; padding:0px;margin: 2px;">
    <i class="fa fa-facebook-official w3-hover-opacity w3-text-indigo"></i>
  </a>
  {% endif %}
  
  {% if company.linkInstagramActive == true %}
  <a href="{{company.linkInstagram}}" target="_blank" style="display:inline; padding:0px;margin: 2px;">
    <i class="fa fa-instagram w3-hover-opacity w3-text-brown"></i>
  </a>
  {% endif %}
  
  {% if company.linkPinterestActive == true %}
  <a href="{{company.linkPinterest}}" target="_blank" style="display:inline; padding:0px;margin: 2px;">
    <i class="fa fa-pinterest-p w3-hover-opacity w3-text-red"></i>
  </a>
  {% endif %}
  
  {% if company.linkTwitterActive == true %}
  <a href="{{company.linkTwitter}}" target="_blank" style="display:inline; padding:0px;margin: 2px;">
    <i class="fa fa-twitter w3-hover-opacity w3-text-blue"></i>
  </a>
  {% endif %}
  
  {% if company.linkLinkenActive == true %}
  <a href="{{company.linkLinken}}" target="_blank" style="display:inline; padding:0px;margin: 2px;">
    <i class="fa fa-linkedin w3-hover-opacity w3-text-blue"></i>
  </a>
  {% endif %}
  
  {% if company.linkBehanceActive == true %}
  <a href="{{company.linkBehance}}" target="_blank" style="display:inline; padding:0px;margin: 2px;">
    <i class="fa fa-behance w3-hover-opacity w3-teal"></i>
  </a>
  {% endif %}
  
  {% if company.linkYoutubeActive == true %}
  <a href="{{company.linkYoutube}}" target="_blank" style="display:inline; padding:0px;margin:2px;font-size: 30px">
    <i class="fa fa-youtube w3-hover-opacity w3-text-red"></i>
  </a>
  {% endif %}

  {% if company.linkSnapchatActive== true %}
  <a href="{{company.linkSnapchat}}" target="_blank" style="display:inline; padding:0px;margin: 2px;">
    <i class="fa fa-snapchat w3-hover-opacity w3-text-brown"></i>
  </a>
  {% endif %}

</div>
        </div>
    </section>


		{% include 'taruga/navbarmobile.help_improve.html' %}
		
		{% include 'taruga/javascript.help_improve.html' %}

    </body>
</html>